{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "create-inspiration-note",
            "type": "shell",
            "command": "python",
            "args": [
                "${workspaceFolder}/scripts/create_note.py",
                "--template",
                "inspiration"
            ],
            "group": "build",
            "presentation": {
                "echo": true,
                "reveal": "always"
            },
            "problemMatcher": []
        },
        {
            "label": "create-report-note",
            "type": "shell",
            "command": "python",
            "args": [
                "${workspaceFolder}/scripts/create_note.py",
                "--template",
                "report"
            ],
            "group": "build",
            "presentation": {
                "echo": true,
                "reveal": "always"
            },
            "problemMatcher": []
        },
        {
            "label": "create-custom-note",
            "type": "shell",
            "command": "python",
            "args": [
                "${workspaceFolder}/scripts/create_note.py",
                "--template",
                "${input:customTemplateName}"
            ],
            "group": "build",
            "presentation": {
                "echo": true,
                "reveal": "always"
            },
            "problemMatcher": []
        }
    ],
    "inputs": [
        {
            "id": "customTemplateName",
            "type": "promptString",
            "description": "请输入模板类型 (inspiration, report, 或自定义)",
            "default": "inspiration"
        }
    ]
}